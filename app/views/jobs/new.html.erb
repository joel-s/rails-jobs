<h1>New Job</h1>

<%= form_for :job, url: jobs_path do |f| %>
  <p>
    <%= f.label :poster %><br>
    <%= f.text_field :poster %>
  </p>

  <p>
    <%= f.label :category %><br>
    <%= f.collection_select :category, Job.categories.map{ |c| [c.first, c.first.humanize] }, :first, :second %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
